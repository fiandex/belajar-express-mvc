generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  nama      String?
  password  String
  createdAt DateTime  @default(now())
  
  // RELASI: Satu User bisa punya banyak Product
  products  Product[] 
}

model Product {
  id        Int      @id @default(autoincrement())
  title     String
  price     Int
  image     String?
  createdAt DateTime @default(now())

  // RELASI: Produk ini milik SATU User
  // Ini kolom Foreign Key di database
  userId    Int      
  // Ini definisi relasi untuk Prisma (Virtual)
  user      User     @relation(fields: [userId], references: [id])
}